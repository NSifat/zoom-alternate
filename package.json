{
  "name": "webrtc-video-conference",
  "version": "1.0.0",
  "description": "Local Jitsi-Meet-like WebRTC video conferencing app",
  "main": "electron/main.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "electron-start": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "electron-builder",
    "android:sync": "npx cap sync",
    "android:open": "npx cap open android"
  },
  "keywords": [
    "webrtc",
    "video-conference",
    "socket.io"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^6.2.1",
    "@capacitor/core": "^6.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^2.0.0",
    "nodemon": "^2.0.20",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.zoomalternate.app",
    "productName": "Zoom Alternate",
    "files": [
      "electron/",
      "server/",
      "index.html",
      "app.js",
      "style.css",
      "favicon.ico",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Zoom Alternate"
    }
  }
}
